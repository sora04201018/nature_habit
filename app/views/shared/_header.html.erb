<header class="w-full bg-white shadow-md py-4 px-8 flex justify-between items-center">
  <div class="text-2xl font-bold text-green-700">
    <% if user_signed_in? %>
      <%= link_to "NatureHabit", dashboard_path, class: "hover:text-green-600, transition" %>
    <% else %>
      <%= link_to "NatureHabit", root_path, class: "hover:text-green-600 transition" %>
    <% end %>
  </div>

  <nav class="space-x-6 text-gray-600">
    <% if user_signed_in? %>
      <%= link_to "ログアウト", destroy_user_session_path, class: "hover:text-green-600", data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" } %>
    <% else %>
      <%= link_to "ログイン", new_user_session_path, class: "hover:text-green-600" %>
    <% end %>
  </nav>
</header>
