<%= form_with model: habit, local: true do |f| %>
  <div class="mb-5">
    <%= f.label :title, "習慣タイトル", class: "block text-gray font-bold mb-1" %>
    <%= f.text_field :title, class: "w-full border border-gray-300 p-2 rounded-lg focus:ring-2 focus:ring-green-400 focus:outline-none", placeholder: "習慣タイトル" %>
  </div>

  <div class="mb-5">
    <%= f.label :frequency, "習慣頻度", class: "block text-gray font-bold mb-1" %>
    <%= f.select :frequency, Habit.frequencies.keys.map { |k| [k.humanize, k] }, {}, class: "w-full border border-gray-300 p-2 rounded-lg focus:ring-2 focus:ring-green-400 focus:outline-none" %>
  </div>

  <div class="flex justify-end mt-3 mb-5">
    <%= f.submit "登録", class: "bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-5 rounded-lg shadow-md transition" %>
  </div>
<% end %>
