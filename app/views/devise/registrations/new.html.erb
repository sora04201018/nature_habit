<div class="min-h-screen flex flex-col w-screen">
  <div class="flex-grow flex flex-col items-center justify-center text-center p-8 bg-gradient-to-b from-green-50 to-white">
    <h1 class="text-4xl font-bold text-green-700 mb-4">🌱新規登録🌱</h1>
      <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, "ユーザー名", class: "block text-gray-700 font-semibold mb-1" %>
          <%= f.text_field :name, class: "w-full border border-gray-300 p-2 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-semibold mb-1" %>
          <%= f.text_field :email, class: "w-full border border-gray-300 p-2 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", placeholder: "xxx@example.com" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, "パスワード", class: "block text-gray-700 font-semibold mb-1" %>
          <%= f.password_field :password, class: "w-full border border-gray-300 p-2 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, "パスワード確認", class: "block text-gray-700 font-semibold mb-1" %>
          <%= f.password_field :password_confirmation, class: "w-full border border-gray-300 p-2 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none" %>
        </div>
        <div class="mb-3">
          <%= f.submit "登録", class: "bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition" %>
        </div>
      <% end %>
  </div>
</div>
