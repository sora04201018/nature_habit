<div class="min-h-screen flex flex-col w-screen bg-gradient-to-b from-green-50 to-white">
  <div class="flex-grow flex items-center justify-center p-8">
    <div class="w-full max-w-lg p-8">
      <h1 class="text-4xl font-bold text-green-700 mb-10 text-center">🌱新しいパスワード設定🌱</h1>

      <%= form_with model: resource, url: password_path(resource_name), html: { method: :put } do |f| %> 
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

        <div class="mb-8">
          <%= f.label :password, "新しいパスワード", class: "block text-gray-700 font-semibold mb-1" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "新しいパスワード", class: "w-full border border-gray-300 p-2 rounded-lg focus:ring-2 focus:ring-green-400 focus:outline-none" %>
          <%# config/devise.rbで設定されているパスワードの文字数 %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em><br />
          <% end %>
        </div>

        <div class="mb-8">
          <%= f.label :password_confirmation, "パスワード確認", class: "block text-gray-700 font-semibold mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "新しいパスワード", class: "w-full border border-gray-300 p-2 rounded-lg focus:ring-2 focus:ring-green-400 focus:outline-none" %>
        </div>

        <div class="flex justify-end mb-8">
          <%= f.submit "登録", class: "bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
