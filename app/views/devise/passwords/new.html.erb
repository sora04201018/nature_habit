<div class="grow flex items-center justify-center p-8">
  <div class="w-full max-w-lg p-8 bg-white/70 rounded-3xl shadow-lg">
    <h1 class="text-4xl font-bold text-green-700 mb-10 text-center">🌱パスワードの再設定🌱</h1>

    <%= form_with model: resource, url: password_path(resource_name), html: { method: :post } do |f| %>
      <%= render "shared/devise_errors_message", resource: resource %>

      <div class="mb-8">
        <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.email_field :email, class: "w-full border border-gray-300 p-3 rounded-lg focus:ring-2 focus:ring-green-400 focus:outline-none", placeholder: "ご登録のメールアドレスを入力してください" %>
      </div>

      <div class="flex justify-end">
        <%= f.submit "送信", class: "bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition" %>
      </div>
    <% end %>

    <div class="text-center text-green-600">
      <br><%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "text-1xl text-center mb-10 hover:text-green-600" %></br>
      <br><%= link_to "ログイン",  new_user_session_path, class: "text-1xl text-center hover:text-green-600" %></br>
    </div>

  </div>
</div>
