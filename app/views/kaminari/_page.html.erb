<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span>
  <% if page.current? %>
    <span class="px-3 py-2 text-sm rounded-md bg-green-600 text-white font-semibold"><%= page %></span>
  <% else %>
    <%= link_to page, url, class: "px-3 py-2 text-sm rounded-md border border-green-300 text-green-700 hover:bg-green-100 transition", remote: true, rel: page.rel %>
  <% end %>
</span>
